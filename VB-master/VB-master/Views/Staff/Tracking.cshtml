
@{
    ViewData["Title"] = "Tracking";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<h1 class="text-center">Blood Pressure Tracking Form</h1>

<div class="formbold-main-wrapper" style=" margin:0 auto;">
   
    <div class="formbold-form-wrapper">
        <form  method="POST">
            <div class="formbold-mb-5 formbold-pt-3">
                <label class="formbold-form-label formbold-form-label-2">
                    Patient Name:
                </label>
            <div class="w-full sm:w-half formbold-px-3">
            <div class="formbold-mb-5">
                <label for="name" class="formbold-form-label"> First Name* </label>
                <input type="text"
                       name="name"
                       id="name"
                       placeholder="First"
                       class="formbold-form-input" />
            </div>
            <div class="formbold-mb-5">
                <label for="name" class="formbold-form-label"> Last Name* </label>
                <input type="text"
                       name="name"
                       id="name"
                       placeholder="Last"
                       class="formbold-form-input" />
            </div>
            </div>  
            </div>
            <div class="formbold-mb-5">
                <label for="phone" class="formbold-form-label"> Patient Phone Number* </label>
                <input type="text"
                       name="phone"
                       id="phone"
                       placeholder="### ### ####"
                       class="formbold-form-input" />
            </div>
            <div class="formbold-mb-5 formbold-pt-3">
                <label class="formbold-form-label formbold-form-label-2">
                    Doctor Name:*
                </label>
            <div class="w-full sm:w-half formbold-px-3">
            <div class="formbold-mb-5">
                <label for="name" class="formbold-form-label"> First Name </label>
                <input type="text"
                       name="name"
                       id="name"
                       placeholder="First"
                       class="formbold-form-input" />
            </div>
            <div class="formbold-mb-5">
                <label for="name" class="formbold-form-label"> Last Name </label>
                <input type="text"
                       name="name"
                       id="name"
                       placeholder="Last"
                       class="formbold-form-input" />
            </div>
            </div>
            </div>
            <div class="formbold-mb-5">
                <label for="email" class="formbold-form-label"> Blood Pressure Level* </label>
                <input type="text"
                       name="pressure"
                       id="pressure"
                       placeholder="mmHg"
                       class="formbold-form-input" />
            </div>  
             <div class="formbold-mb-5">
                <label for="name" class="formbold-form-label"> Doctor's' Comments </label>
                <input type="text"
                       name="comment"
                       id="comment"
                       placeholder="Comment"
                       class="formbold-form-input" />
            </div>
            <div class="formbold-mb-5">
                <label for="name" class="formbold-form-label"> Date* </label>
                <input type="date"
                       name="date"
                       id="date"
                       placeholder="MM/DD/YYY"
                       class="formbold-form-input" />
            </div>
            <div>
                <button class="formbold-btn">Submit Form</button>
            </div>
        </form>
    </div>
</div>
