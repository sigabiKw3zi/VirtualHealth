@using Microsoft.AspNetCore.Identity
@{
    ViewBag.Title = "Index";
}
@*@model PagedList.IPagedList<Bookings>*@
@*@model ItemViewModel;*@
@*@model BookingViewModel*@


<h2>These are Your Bookings</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Date</th>
            <th>Time</th>
            <th>Venue</th>
            <th>Duration</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.Items)
        {
            <tr>
                <td>@booking.Id</td>
                <td>@booking.Name</td>
                <td>@booking.Surname</td>
                <td>@booking.Date.ToShortDateString()</td>
                <td>@booking.Time</td>
                <td>@booking.Vanue</td>
                <td>@booking.Duration</td>
                <td>@booking.Type</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = booking.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = booking.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this booking?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    <label>Number of Pages</label>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a href="@Url.Action("Index", new { page = i })">@i</a>
    }
</div>



