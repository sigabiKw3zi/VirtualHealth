@model VB.Models.Bookings

<h2>Delete Booking</h2>
<h3>Are you sure you want to delete this booking?</h3>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Surname</th>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <th>DDate</th>
        <td>@Model.Date.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Time </th>
        <td>@Model.Time</td>
        
    </tr>
    <tr>
        <th>Vanue </th>
        <td>@Model.Vanue</td>
        
    </tr>
    <tr>
        <th> Duration</th>
        <td>@Model.Duration</td>
        
    </tr>
    <tr>
        <th></th>
        <td>@Model.Type</td>
    </tr>
    

</table>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <div class="form-actions">
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
