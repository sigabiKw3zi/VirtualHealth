                    </div>
                </div>
            </div>
            <div class="card">
                <img src="~/css/Chec-Up.jpg" class="img-fluid" alt="Card image cap">
                <div class="card-body w3ls-card">
                    <h5 class="card-title">Checkup</h5>
                    <div class="ab_button">
                        <a class="btn btn-primary btn-lg hvr-underline-from-left" href="~/Views/Second/SecondView.cshtml" role="button" data-toggle="modal" data-target="#myModal">Book</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
