                <img src="~/css/Nutrition.png" class="img-fluid" alt="Card image cap">
                <div class="card-body w3ls-card">
                    <h5 class="card-title">Nutrition</h5>
                    <div class="ab_button">
                        <a class="btn btn-secondary btn-lg hvr-underline-from-left" href="~/Views/Second/SecondView.cshtml" role="button" data-toggle="modal" data-target="#myModal">Book </a>
                    </div>
                </div>
            </div>
            <div class="card">
                <img src="~/css/Counselling.jpg" class="img-fluid" alt="Card image cap">
                <div class="card-body w3ls-card">
                    <h5 class="card-title">Counselling</h5> 
                    <div class="ab_button">
                        <a class="btn btn-secondary btn-lg hvr-underline-from-left" href="~/Views/Second/SecondView.cshtml" role="button" data-toggle="modal" data-target="#myModal">Book </a>
                    </div>
                </div>
            </div>
            <div class="card">
                <img src="~/css/Emergency.jpg" class="img-fluid" alt="Card image cap">
                <div class="card-body w3ls-card">
                    <h5 class="card-title" >Emergency Booking</h5>
                    <div class="ab_button">
                        <a class="btn btn-primary btn-lg hvr-underline-from-left" href="~/Views/Second/SecondView.cshtml" role="button" data-toggle="modal" data-target="#myModal">Book</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


	
